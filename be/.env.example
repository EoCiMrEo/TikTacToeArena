# TicTacToe Arena Backend - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
# FLASK_ENV=production  # Uncomment for production

# Secret Keys (Generate new ones for production!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/tictactoe_arena

# Redis Configuration (for caching and WebSocket pub/sub)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
FRONTEND_URL=http://localhost:4028

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=900          # 15 minutes in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000    # 30 days in seconds

# Email Configuration (for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@tictactoearena.com

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Sentry Configuration (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn-here

# Server Configuration
SERVER_NAME=localhost:5000
MAX_CONTENT_LENGTH=16777216  # 16MB max upload size

# Security Configuration
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Logging
LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Game Configuration
DEFAULT_ELO_RATING=1200
ELO_K_FACTOR=32
MOVE_TIME_LIMIT=30  # seconds per move
GAME_TIMEOUT=300    # 5 minutes of inactivity

# Matchmaking Configuration
MATCHMAKING_ELO_RANGE=200  # +/- ELO range for matching
MATCHMAKING_CHECK_INTERVAL=5  # seconds between matchmaking checks

# Cache Configuration
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/4
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# Production Database (Uncomment and configure for production)
# DATABASE_URL=postgresql://user:password@your-db-host:5432/tictactoe_arena_prod

# Production Redis (Uncomment and configure for production)
# REDIS_URL=redis://your-redis-host:6379/0

# AWS S3 Configuration (optional - for avatar uploads)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=tictactoe-arena-avatars
# AWS_S3_REGION=us-east-1
